@model Employee


<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="Home.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="~/css/SharedViews/login.css" rel="stylesheet" />
    <!-- Other meta tags and links -->
    <link rel="icon" type="image/jpeg" href="~/image/eye.jpg" asp-append-version="true" />
</head>


<div id="navbar">
    <div class="assiutLogo">
        <img src="./image/Assiut_University_logo.gif" alt="شعار جامعة أسيوط" />
    </div>

    <div class="hieroglyph">𓅝𓏏𓎛  </div>
    <img src="./image/eye.jpg" alt="logo">
</div>


@*  Success and Error Messages  *@

<div class="card-body">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="bx bx-check-circle"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="bx bx-error-circle"></i> @TempData["Error"]
        </div>
    }
</div>

<div class="registeration">
    <div class="registration-container">
        <form action="/Employee/EmployeeLogin" id="myform" enctype="multipart/form-data" method="post">
            <h1>تحوت يرحب بك .. من فضلك قم بتسجيل الدخول</h1>

            <div class="text">
                <h1>TH<span>&#x13080;</span>TH</h1>
            </div>

            <div class="inputBox">
                <input type="text" asp-for="@Model.EmployeeUserName" placeholder="اسم المستخدم" id="userName" />
                <i class="bx bxs-user"></i>
            </div>
            <p asp-validation-for="@Model.EmployeeUserName" class="error"></p>


            <br />
            <div class="inputBox">
                <input type="password" asp-for="@Model.EmployeePassword" placeholder="كلمه المرور" id="Password" />
                <i class="fa-solid fa-eye" id="togglePassword"></i>
            </div>
            <p asp-validation-for="@Model.EmployeePassword" class="error"></p>


            <div class="LogIn">
                <input type="submit" value="تسجيل الدخول" class="btnLog" />
            </div>

            <div class="reset">
                <input type="reset" value="إعادة إدخال" class="btnReset" />
            </div>

        </form>
    </div>
</div>




<script src="~/js/SharedViews/loginEmployee.js">


</script>