@{
    Layout = null;
}

@model Employee;

<style>


    /* html, body { */
    /*     width: 100%; */
    /*     min-height: 100%; */
    /*     overflow-x: hidden; */
    /*     overflow-y: auto; */
    /*     margin: 0; */
