@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model ThothSystemVersion1.ViewModels.AccountingReportViewModel

@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    ViewData["Title"] = "Thoth";
    int jobRole = HttpContextAccessor.HttpContext.Session.GetInt32("JobRole") ?? 0;
}

@section HeadContent {
    <link rel="icon" type="image/x-icon" href="~/image/eye.jpg" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/css/Inventory/inventoryReports.css" rel="stylesheet" />
}

<div class="container">
    <!-- Back button based on role -->
    @if (jobRole == 0)
    {
        <a asp-controller="employee" asp-action="adminhome" class="back">
            <i class='bx bx-left-arrow-circle' style="font-size:40px; color:white;"></i>
        </a>
    }
    else if (jobRole == 7)
    {
        <a asp-controller="employee" asp-action="accountingManager" class="back">
            <i class='bx bx-left-arrow-circle' style="font-size:40px; color:white;"></i>
        </a>
    }

    <div class="mainBox">
        <h1>تقارير الحسابات</h1>
        <div class="toggle-btn" onclick="toggleForm()">
            <span>حركة المشتريات و الطلبات <i class='bx bx-chevrons-down'></i></span>
        </div>

        <div id="formSection" class="hiddenBox">
            <form asp-action="AccountingReport" method="post">
                <div class="rowCont">
                    <div class="colCont">
                        <label name="endingDate" class="input-label">إلى تاريخ</label>
                        <input name="endingDate" type="date" class="text-input" value="@DateTime.Now:yyyy-MM-dd" required />
                    </div>
                    <div class="colCont">
                        <label name="beginingDate" class="input-label">من تاريخ</label>
                        <input name="beginingDate" type="date" class="text-input" value="@DateTime.Now:yyyy-MM-dd" required />
                    </div>
                </div>
                <button type="submit" class="btn">عرض تقرير الحسابات</button>
            </form>
        </div>
    </div>

    <!-- Results Section -->
    <div class="report-results">
        @if (Model != null)
        {
            <div class="card-container" style="display:flex; gap:1rem; margin-top:2rem;">
                <!-- Job Orders Card -->
                <div class="report-card" style="flex:1; padding:1rem; border:1px solid #ccc; border-radius:8px;">
                    <h2>حركة طلبيات الوظائف</h2>
                    @if (Model.jobOrdersCount > 0)
                    {
                        <p><strong>@Html.DisplayNameFor(m => m.jobOrdersCount):</strong> @Model.jobOrdersCount</p>
                        <p><strong>@Html.DisplayNameFor(m => m.jobOrderRemainingAmount):</strong> @Model.jobOrderRemainingAmount.ToString("N2")</p>
                        <p><strong>@Html.DisplayNameFor(m => m.jobOrderUnearnedRevenue):</strong> @Model.jobOrderUnearnedRevenue.ToString("N2")</p>
                        <p><strong>@Html.DisplayNameFor(m => m.jobOrderEarnedRevenue):</strong> @Model.jobOrderEarnedRevenue.ToString("N2")</p>
                        <p><strong>@Html.DisplayNameFor(m => m.lateJobOrders):</strong> @Model.lateJobOrders</p>
                    }
                    else
                    {
                        <p>لا توجد بيانات</p>
                    }
                </div>

                <!-- Purchase Orders Card -->
                <div class="report-card" style="flex:1; padding:1rem; border:1px solid #ccc; border-radius:8px;">
                    <h2>حركة طلبيات الشراء</h2>
                    @if (Model.purchaseOrdersCount > 0)
                    {
                        <p><strong>@Html.DisplayNameFor(m => m.purchaseOrdersCount):</strong> @Model.purchaseOrdersCount</p>
                        <p><strong>@Html.DisplayNameFor(m => m.purchaseRemainingAmount):</strong> @Model.purchaseRemainingAmount.ToString("N2")</p>
                        <p><strong>@Html.DisplayNameFor(m => m.purchasePaidAmount):</strong> @Model.purchasePaidAmount.ToString("N2")</p>
                        <p><strong>@Html.DisplayNameFor(m => m.latepurchaseOrders):</strong> @Model.latepurchaseOrders</p>
                    }
                    else
                    {
                        <p>لا توجد بيانات</p>
                    }
                </div>
            </div>
        }
        else
        {
            <p style="margin-top:2rem;">لا توجد بيانات</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleForm() {
            var section = document.getElementById('formSection');
            section.classList.toggle('hiddenBox');
        }
    </script>
}
