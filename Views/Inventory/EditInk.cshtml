@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor




@model ThothSystemVersion1.Models.Ink

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/jpeg" href="~/image/eye.jpg" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/css/Inventory/EditInk.css" rel="stylesheet" />
    <title>ThoTh</title>
</head>

@{

    int jobRole = HttpContextAccessor.HttpContext.Session.GetInt32("JobRole") ?? 0;
    Console.WriteLine("JobRole: " + jobRole);
}

@{
    ViewData["Title"] = "تعديل بيانات الحبر";
}

<div class="form-container">

    <div class="arrow">
        @{
            // admin
            if (jobRole == 0)
            {
                <a asp-controller="employee" asp-action="adminhome" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>

            } // inventory manager
            else if (jobRole == 1)
            {
                <a asp-controller="employee" asp-action="inventoryManager" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>
            }

        }
    </div>

    <h1> تعديل بيانات الحبر  : @Model.Name </h1>

    <form asp-controller="Inventory" asp-action="EditInk" method="post" id="myform">

        @if (TempData["Success"] != null)
        {
            <div class="notification success">
                <div class="notification-content">
                    <i class='bx bx-check-circle'></i> @TempData["Success"]

                </div>
                <input type="hidden" id="tempDataSuccess" value="true" />
                <div class="progress-bar success"></div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="notification error">
                <div class="notification-content">
                    <i class='bx bx-error-circle'></i>
                    <span>@TempData["Error"]</span>
                </div>
                <input type="hidden" id="tempDataSuccess" value="false" />

                <div class="progress-bar error"></div>

            </div>
        }
        <input type="hidden" id="hdnJobRole" value="@jobRole" />
        <div asp-validation-summary="ModelOnly" class="error"></div>
        @* Success and Error Messages *@
        @* @if (TempData["Success"] != null) *@
        @* { *@
        @*     <div class="alert alert-success"> *@
        @*         <i class="fas fa-check-circle"></i> @TempData["Success"] *@
        @*         <input type="hidden" id="tempDataSuccess" value="true" /> *@
        @*     </div> *@
        @* } *@
        @* @if (TempData["Error"] != null) *@
        @* { *@
        @*     <div class="alert alert-danger"> *@
        @*         <i class="fas fa-exclamation-circle"></i> @TempData["Error"] *@
        @*         <input type="hidden" id="tempDataSuccess" value="false" /> *@
        @*     </div> *@
        @* } *@
        @* <input type="hidden" id="hdnJobRole" value="@jobRole" /> *@
        @* <div asp-validation-summary="ModelOnly" class="error"></div> *@


         <input type="hidden" asp-for="InkId" /> 

        <div class="inputBox">
            <label asp-for="@Model.Name" class="textlabel"></label>
            <input asp-for="@Model.Name" id="Name" class="place" />
            <span asp-validation-for="@Model.Name" class="error"></span>
            <span class="error"></span>
        </div>

        <div class="inputBox">
            <label asp-for="@Model.Colored" class="textlabel"></label>
            <select asp-for="@Model.Colored" id="Colored" class="place">
                <option value="blue">أزرق</option>
                <option value="black">أسود</option>
                <option value="mix">ألوان</option>
            </select>
            <span asp-validation-for="@Model.Colored" class="error"></span>

        </div>

        <div class="inputBox">
            <label asp-for="TotalBalance" class="textlabel"></label>
            <input asp-for="TotalBalance" id="TotalBalance" class="place" readonly disabled />
            <span class="error"></span>

        </div>

        <div class="inputBox">
            <label asp-for="Quantity" class="textlabel"></label>
            <input asp-for="Quantity" id="Quantity" class="place" readonly disabled />
            <span class="error"></span>

        </div>

        <div class="inputBox">
            <label asp-for="Price" class="textlabel"></label>
            <input asp-for="Price" id="Price" class="place" readonly disabled />
            <span class="error"></span>

        </div>

        <div class="inputBox">
            <label asp-for="@Model.ReorderPoint" class="textlabel"></label>
            <input asp-for="@Model.ReorderPoint" step="any" type="number" step="any" id="ReorderPoint" class="place" />
            <span asp-validation-for="@Model.ReorderPoint" class="error"></span>
            <span class="error"></span>
        </div>

        <div class="inputBox">
            <label asp-for="@Model.Activated" class="textlabel"> </label>
            <select asp-for="@Model.Activated" id="options" class="place">
                @{
                    if (Model.Activated)
                    {
                        <option value="true" selected>مفعل</option>
                        <option value="false">غير مفعل</option>
                    }
                    else
                    {
                        <option value="false" selected>غير مفعل</option>
                        <option value="true">مفعل</option>
                    }
                }
            </select>
        </div>

        <div class="button-container">
            @* <input type="button" value="رجوع" onclick="history.back()" class="btn btn-secondary" /> *@
            <input type="submit" value="تعديل" class="btn btn-primary" />
        </div>
    </form>
</div>

<script src="~/js/Inventory/EditInk.js"></script>

