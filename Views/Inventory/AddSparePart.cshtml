@model SparePart;
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}

@inject IHttpContextAccessor HttpContextAccessor


@{

    int jobRole = HttpContextAccessor.HttpContext.Session.GetInt32("JobRole") ?? 0;
    Console.WriteLine("JobRole: " + jobRole);
}



<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="Home.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    @* <link rel="icon" type="image/x-icon" href="@Url.Content("~/photos/eye.jpg")" /> *@
    <link rel="icon" type="image/jpeg" href="~/image/eye.jpg" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/Inventory/AddSparePart.css" rel="stylesheet" />
    <title>ThoTh</title>
</head>



    <div class="arrow">
        @{
            // admin
            if (jobRole == 0)
            {
                <a asp-controller="employee" asp-action="adminhome" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>

            } // inventory manager
            else if (jobRole == 1)
            {
                <a asp-controller="employee" asp-action="inventoryManager" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>
            }
          

        }
    </div>

    <div class="form-container">
    <form asp-action="AddSparePart" asp-controller="Inventory" id="myform" enctype="multipart/form-data" method="post">

        @if (TempData["Success"] != null)
        {
            <div class="notification success">
                <div class="notification-content">
                    <i class='bx bx-check-circle'></i> @TempData["Success"]
                </div>
                <input type="hidden" id="tempDataSuccess" value="true" />
                <div class="progress-bar success"></div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="notification error">
                <div class="notification-content">
                    <i class='bx bx-error-circle'></i>
                    <span>@TempData["Error"]</span>
                </div>
                <input type="hidden" id="tempDataSuccess" value="false" />
                <div class="progress-bar error"></div>
            </div>
        }

        <input type="hidden" id="hdnJobRole" value="@jobRole" />
        <div asp-validation-summary="ModelOnly" class="error"></div>

        <div class="text">
            <h1>إضافة قطع غيار</h1>
        </div>
        <div class="inputBox">
            <label for="paperName" class="textlabel">اسم لقطعه الغيار</label>
            <input type="text"class="place" asp-for="@Model.Name" id="Name" />
            <span class="error" asp-validation-for="@Model.Name"></span>
        </div>


        <div class="inputBox">
            <label for="Quantity" class="textlabel">كميه قطع الغيار</label>
            <input type="number"class="place" step="any" asp-for="@Model.Quantity" id="Quantity" />
            <p asp-validation-for="@Model.Quantity" class="error"></p>
        </div>

        <div class="inputBox">
            <label for="Quantity" class="textlabel">سعر قطعه الغيار</label>
            <input type="number" class="place" step="any" asp-for="@Model.Price" id="Price" />
            <p asp-validation-for="@Model.Price" class="error"></p>
        </div>
        <div class="inputBox">
            <label for="ReorderPoint" class="textlabel">نقطة إعادة الطلب</label>
            <input type="number"class="place" step="any" asp-for="@Model.ReorderPoint" id="ReorderPoint" />
            <span asp-validation-for="@Model.ReorderPoint" class="error"></span>
        </div>
        <div class="button-container">
            <input type="submit" value="تأكيد الإضافة " class="btn btn-secondary" />
            </div>

    </form>

</div>
<script src="~/js/Inventory/AddSparePart.js"></script>
