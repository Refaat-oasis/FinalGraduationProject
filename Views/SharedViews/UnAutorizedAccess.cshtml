@{
    ViewData["Title"] = "Unauthorized Access";

}
@{
    Layout = null;
}

<style>
    body {
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

    .card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 30px;
    }

    h1 {
        font-size: 4rem;
        font-weight: bold;
    }

    h2 {
        font-size: 2rem;
        margin-top: 10px;
    }

    p {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 6px;
        transition: 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .bi-x-circle {
        color: #dc3545;
        font-size: 3rem;
        margin-bottom: 10px;
    }

    .bi-house-door {
        margin-right: 5px;
    }

</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        <div class="card shadow-lg p-4 border-0">
            <div class="card-body">
                <h1 class="text-danger display-4"><i class="bi bi-x-circle"></i> 401</h1>
                <h2 class="text-dark">Unauthorized Access</h2>
                <p class="text-muted">You do not have permission to access this page.</p>
                <a href="@Url.Action("Loginpage", "employee")" class="btn btn-primary">
                    <i class="bi bi-house-door"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

