@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}


@model Labour;

@{

    int jobRole = HttpContextAccessor.HttpContext.Session.GetInt32("JobRole") ?? 0;
    Console.WriteLine("JobRole: " + jobRole);
}



<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="Home.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/x-icon" href="/image/eye.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/Cost/AddLabour.css" rel="stylesheet" />
    <title>ThoTh</title>
</head>


<div class="container">
    <div class="arrow">
        @{
            // admin
            if (jobRole == 0)
            {
                <a asp-controller="employee" asp-action="adminhome" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>

            } // Cost manager
            else if (jobRole == 5)
            {
                <a asp-controller="employee" asp-action="CostManager" class="back">
                    <i class='bx bx-left-arrow-circle' style="font-size: 40px; color: white;"></i>
                </a>
            }


        }
    </div>


    <form asp-action="AddLabour" id="myform" enctype="multipart/form-data" method="post">
        @* Success and Error Messages *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <input type="hidden" id="tempDataSuccess" value="true" />
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <input type="hidden" id="tempDataSuccess" value="false" />
            </div>
        }
        <input type="hidden" id="hdnJobRole" value="@jobRole" />
        <div class="text">
            <h1>إضافة عامل جديد</h1>
        </div>

        @* <div class="inputBox"> *@
        @*     <label for="LabourId">الرقم لتعريفي للعامل</label> *@
        @*     <input type="number" asp-for="@Model.LabourId" id="LabourId" /> *@
        @*     <p asp-validation-for="@Model.LabourId" class="error"></p> *@
        @* </div> *@

        <div class="inputBox">
            <label for="Name">اسم العامل</label>
            <input type="text" asp-for="@Model.LabourProcessName" id="Name" />
            <span asp-validation-for="@Model.LabourProcessName" class="error"></span>
        </div>

        <div class="inputBox">
            <label for="Price">سعر العامل</label>
            <input type="number" step="any" asp-for="@Model.Price" id="Price" />
            <span asp-validation-for="@Model.Price" class="error"></span>
        </div>


        @* <div class="inputBox"> *@
        @*     <label asp-for="@Model.Activated" class="textlabel"> </label> *@
        @*     <select asp-for="@Model.Activated" id="options" class="place"> *@
        @*         @{ *@
        @*             if (Model.Activated) *@
        @*             { *@
        @*                 <option value="true" selected>مفعل</option> *@
        @*                 <option value="false">غير مفعل</option> *@
        @*             } *@
        @*             else *@
        @*             { *@
        @*                 <option value="false" selected>غير مفعل</option> *@
        @*                 <option value="true">مفعل</option> *@
        @*             } *@
        @*         } *@
        @*     </select> *@
        @* </div> *@



        <div class="buttons">
            <div class="Add">
                <input type="submit" value="تأكيد الإضافة " class="Add" />
            </div>

            <div class="reset">
                <input type="reset" value="إعادة إدخال" class="btnReset" />
            </div>
        </div>

    </form>
</div>
<script src="~/js/Cost/AddLabour.js"></script>
