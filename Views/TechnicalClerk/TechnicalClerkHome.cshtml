@model Employee;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Main page CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/TechnicalClerk/TechnicalClerkHome.css")" asp-append-version="true" />

    <!-- Icon in browser tab -->
    <link rel="icon"
          type="image/x-icon"
          href="@Url.Content("~/image/eye.jpg")" />

    <!-- Fonts & Icons -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <title>ThoTh - Technical Clerk Home</title>

    <style>
        /* Dropdown submenu hidden by default */
        .sidebar .dropdown li > ul {
            display: none;
            list-style: none;
            margin: 0;
            padding-left: 1rem;
        }
        /* Show submenu when parent has 'open' */
        .sidebar .dropdown li.open > ul {
            display: block;
        }
        /* Optional submenu item spacing */
        .sidebar .dropdown li ul li {
            margin: 0.5rem 0;
        }
    </style>
</head>
<body>

  

    <!-- Sidebar with Dropdown -->
    <div class="sidebar">
        <ul class="dropdown">
            <li onclick="toggleDropdown(this)">
                الفني
                <ul>
                    <li>@Html.ActionLink("اوامر التصنيع", "ViewAllJobOrder", "Technical")</li>
                    <li>@Html.ActionLink("اذونات الصرف", "CreateRequisite", "Technical")</li>
                    <li>@Html.ActionLink("إضافة عميل", "AddCustomer", "Technical")</li>
                    <li>@Html.ActionLink("عرض جميع العملاء", "ViewAllCustomer", "Technical")</li>
                    <li>@Html.ActionLink("عرض جميع الطلبيات", "ViewAllJobOrder", "Technical")</li>
                </ul>
            </li>
        </ul>
        <div class="button">
            @Html.ActionLink("تسجيل الخروج", "logout", "Employee", null, new { @class = "btnBack" })
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <h1>تحوت يتمنى لك يومًا سعيدًا</h1>
        <p>يهدف نظام تحوت إلى تحسين كفاءة العمل في المطبعة من خلال توفير الوقت والجهد للموظفين</p>
        <p>مما يضمن إنتاجًا عالي الجودة بأعلى مستويات الدقة والكفاءة</p>
    </div>

    <!-- Inline Scripts for Dropdown & Messages -->
    <script>
        function toggleDropdown(el) {
            el.classList.toggle('open');
        }
        function closeReorderMessages() {
            var panel = document.getElementById('reorderMessages');
            if (panel) panel.style.display = 'none';
        }
    </script>

    <script src="~/js/TechnicalClerk/TechnicalClerkHome.js" asp-append-version="true"></script>
</body>
</html>
